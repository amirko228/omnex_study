# ============================================================================
# Omnex Study — Переменные окружения
# Скопируйте в .env и заполните реальными значениями
# ============================================================================

# --- Приложение ---
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1
FRONTEND_URL=http://localhost:3000

# --- База данных PostgreSQL ---
DATABASE_URL=postgresql://omnex_user:omnex_password@localhost:5432/omnex_db

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# --- JWT Токены (ОБЯЗАТЕЛЬНО сменить в production!) ---
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# --- OAuth - Google ---
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/oauth/google/callback

# --- OAuth - VK ---
# https://dev.vk.com/
VK_CLIENT_ID=
VK_CLIENT_SECRET=
VK_CALLBACK_URL=http://localhost:4000/api/v1/auth/oauth/vk/callback

# --- OAuth - Yandex ---
# https://oauth.yandex.ru/client/new
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=
YANDEX_CALLBACK_URL=http://localhost:4000/api/v1/auth/oauth/yandex/callback

# --- AI (OpenAI) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# --- Email (SMTP) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@omnexstudy.com

# --- Платежи - Stripe ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# --- Платежи - CloudPayments ---
CLOUDPAYMENTS_PUBLIC_ID=
CLOUDPAYMENTS_SECRET=

# --- Rate Limiting ---
THROTTLE_TTL=60
THROTTLE_LIMIT=100
