# ============================================================================
# Omnex Study — Production Environment Variables
# Скопируйте в .env.production и заполните реальными значениями
#
# ⚡ При миграции на другой домен — измените только секцию «Домен и URL»
# ============================================================================

# --- Домен и URL (ГЛАВНАЯ СЕКЦИЯ ДЛЯ МИГРАЦИИ) ---
DOMAIN=omnexstudy.ru
FRONTEND_URL=https://omnexstudy.ru
NEXT_PUBLIC_API_URL=https://api.omnexstudy.ru/api/v1
NEXT_PUBLIC_APP_URL=https://omnexstudy.ru
API_PREFIX=api/v1

# --- База данных PostgreSQL ---
POSTGRES_DB=omnex_db
POSTGRES_USER=omnex_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# --- Redis ---
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# --- JWT (ОБЯЗАТЕЛЬНО сменить!) ---
JWT_SECRET=CHANGE_ME_RANDOM_64_CHAR_STRING
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=CHANGE_ME_ANOTHER_RANDOM_64_CHAR_STRING
JWT_REFRESH_EXPIRATION=7d

# --- OAuth - Google ---
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://omnexstudy.com/auth/callback?provider=google
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# --- OAuth - VK ---
# https://dev.vk.com/
VK_CLIENT_ID=
VK_CLIENT_SECRET=
VK_CALLBACK_URL=https://omnexstudy.com/auth/callback?provider=vk
NEXT_PUBLIC_VK_CLIENT_ID=

# --- OAuth - Yandex ---
# https://oauth.yandex.ru/client/new
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=
YANDEX_CALLBACK_URL=https://omnexstudy.com/auth/callback?provider=yandex
NEXT_PUBLIC_YANDEX_CLIENT_ID=

# --- AI (OpenAI) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# --- Email (SMTP) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@omnexstudy.com

# --- Платежи - Stripe ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# --- Платежи - CloudPayments ---
CLOUDPAYMENTS_PUBLIC_ID=
CLOUDPAYMENTS_SECRET=

# --- Rate Limiting ---
THROTTLE_TTL=60
THROTTLE_LIMIT=100
